<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                tools:background="@drawable/bg_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="32dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">


    <ImageView
        android:id="@+id/circleMinImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg_temperature"/>

    <TextView
        android:id="@+id/temperatureMinLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/circleMinImageView"
        android:layout_alignTop="@id/circleMinImageView"
        android:layout_alignBottom="@+id/circleMinImageView"
        android:layout_alignLeft="@+id/circleMinImageView"
        android:gravity="center"
        android:textColor="#394854"
        tools:text="50"/>

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/circleMinImageView"
        android:layout_toEndOf="@+id/circleMinImageView"
        android:paddingLeft="10dp"
        android:src="@drawable/clear_day"/>

    <TextView
        android:id="@+id/dayNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iconImageView"
        android:layout_toEndOf="@+id/iconImageView"
        android:paddingLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        tools:text="Wednesday"/>

    <ImageView
        android:id="@+id/circleMaxImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/dayNameLabel"
        android:layout_toEndOf="@+id/dayNameLabel"
        android:paddingLeft="10dp"
        android:src="@drawable/bg_temperature"/>

    <TextView
        android:id="@+id/temperatureMaxLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circleMaxImageView"
        android:layout_alignRight="@+id/circleMaxImageView"
        android:layout_alignLeft="@+id/circleMaxImageView"
        android:layout_alignBottom="@+id/circleMaxImageView"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:textColor="#394854"
        tools:text="100"/>
</RelativeLayout>